<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Feedback Type -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Feedback Type:"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- RadioGroup for feedback type -->
    <RadioGroup
        android:id="@+id/radioGroupFeedbackType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"/>

        <RadioButton
            android:id="@+id/radioButtonSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestion"/>

        <RadioButton
            android:id="@+id/radioButtonComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint"/>
    </RadioGroup>

    <!-- Feedback Text -->
    <EditText
        android:id="@+id/editTextFeedbackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your feedback, suggestion, or complaint"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:layout_marginTop="16dp"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonSubmitFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Feedback"
        android:layout_marginTop="16dp"/>
</LinearLayout>
