<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragments.ArtistProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/artist_hello"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Artist Profile"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Name of Artist"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Email of Artist"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Age of Visitor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_cell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="CellNo of Visitor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_roll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Age of Visitor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Gender of Visitor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/artist_userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="UserName of Visitor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/artist_logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:onClick="onLogoutButtonClicked"
            android:text="Logout"
            android:textSize="20sp" />

    </LinearLayout>


</FrameLayout>